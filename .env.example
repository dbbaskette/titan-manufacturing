# -----------------------------------------------------------------------------
# LLM Provider Configuration (at least one required)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=http://host.docker.internal:11434
OPENAI_MODEL=llama3.1:8b
OPENAI_TEMPERATURE=0.7
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
DEFAULT_LLM=gpt-4.1

# Optional: Use local LLM via Ollama
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3

# -----------------------------------------------------------------------------
# Greenplum Database
# -----------------------------------------------------------------------------
GREENPLUM_USER=gpadmin
GREENPLUM_PASSWORD=changeme

# -----------------------------------------------------------------------------
# RabbitMQ / MQTT Configuration
# -----------------------------------------------------------------------------
RABBITMQ_USER=titan
RABBITMQ_PASSWORD=changeme

# -----------------------------------------------------------------------------
# OpenMetadata Configuration
# -----------------------------------------------------------------------------
OPENMETADATA_URL=http://localhost:8585
OPENMETADATA_TOKEN=

# OpenMetadata MySQL
MYSQL_ROOT_PASSWORD=changeme
MYSQL_USER=openmetadata
MYSQL_PASSWORD=changeme

# -----------------------------------------------------------------------------
# Grafana Configuration
# -----------------------------------------------------------------------------
GRAFANA_ADMIN_PASSWORD=changeme

# -----------------------------------------------------------------------------
# Titan Demo Settings
# -----------------------------------------------------------------------------
# Number of simulated facilities
FACILITY_COUNT=12

# Number of CNC machines per facility (average)
MACHINES_PER_FACILITY=50

# Anomaly simulation rate (0.0 - 1.0)
ANOMALY_RATE=0.05

# Enable demo data generation on startup
GENERATE_DEMO_DATA=true

# -----------------------------------------------------------------------------
# Titan Facility Codes
# -----------------------------------------------------------------------------
# NA Region
FACILITY_PHOENIX=PHX
FACILITY_DETROIT=DET
FACILITY_ATLANTA=ATL

# EU Region
FACILITY_MUNICH=MUC
FACILITY_LYON=LYN

# APAC Region
FACILITY_SHANGHAI=SHA
FACILITY_TOKYO=TYO
